# Language Focus Learning Bot Configuration
# Copy this file to .env and fill in your values

# Required Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
DATABASE_URL=postgresql://user:password@localhost:5432/langfocus

# Required - OpenRouter AI Integration (for learning features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Optional - Support Bot (if you want support functionality)
SUPPORT_BOT_TOKEN=your_support_bot_token_here
SUPPORT_CHAT_ID=your_support_chat_id_here

# Bot Metadata
BOT_NAME=Language Focus Learning Bot
BOT_DESCRIPTION=Learn Russian language tricks with AI-powered feedback
BOT_VERSION=1.0.0

# Localization Settings
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=en,ru,es

# Learning System Configuration
LEARNING_SESSION_TIMEOUT=3600
MAX_ATTEMPTS_PER_TRICK=3
MASTERY_THRESHOLD=80
ENABLE_ADAPTIVE_DIFFICULTY=true
FEEDBACK_CACHE_TTL=86400
MAX_FEEDBACK_LENGTH=500
ENABLE_DETAILED_ANALYSIS=true
PROMPTS_CONFIG_PATH=config/prompts.yaml

# Logging Configuration
LOG_LEVEL=INFO

# Optional - Development Settings
# Uncomment for development/testing
# DEBUG=true